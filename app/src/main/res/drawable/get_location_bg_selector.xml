<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When selected, use grey -->
    <item android:state_selected = "true" android:drawable="@drawable/get_location_selected" />
    <!-- When not selected, use white-->
    <item android:state_pressed="true" android:drawable="@drawable/get_location_selected" />
    <item android:state_selected = "false" android:drawable="@drawable/get_location_not_selected" />
    <!-- When not selected, use white-->
    <item android:state_pressed="false" android:drawable="@drawable/get_location_not_selected" />
</selector>