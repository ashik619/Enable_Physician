<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:id="@+id/popup_element"
    android:background="@drawable/dialog_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textSize="17dp"
        android:id="@+id/textView2"
        android:textColor="@color/textcolor"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your registered email address"
        android:textSize="14dp"
        android:id="@+id/textView3"
        android:layout_below="@id/textView2"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_forgot"
        android:layout_below="@+id/textView3"
        android:hint="Email"
        android:background="@drawable/text_input_bg2"
        android:paddingLeft="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instruction on reset password will be sent shortly"
        android:textSize="14dp"
        android:id="@+id/textView4"
        android:layout_below="@id/email_forgot"
        android:layout_centerHorizontal="false"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Submit"
        android:textSize="17dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:id="@+id/okbutton"
        android:background="@drawable/button_bg"
        android:onClick="okbutton"/>

</RelativeLayout>
