<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="in.co.codoc.enable.MciRegActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <in.co.codoc.enable.IconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your MCI registration Details"
            android:textSize="22dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimary"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:id="@+id/name"
            android:background="@drawable/text_input_bg"
            android:textColor="@color/textcolor"
            android:hint="Your Registered name"
            android:paddingLeft="15dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:id="@+id/mci_no"
            android:background="@drawable/text_input_bg"
            android:textColor="@color/textcolor"
            android:hint="Enter Your MCI Regt. No"
            android:paddingLeft="15dp"/>
        <in.co.codoc.enable.IconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Help"
            android:onClick="help"
            android:layout_marginTop="20dp"
            android:textColor="@color/textcolor" />
        <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="70dp"
            android:text="continue"
            android:textSize="16dp"
            android:onClick="next"
            android:textColor="@color/white"
            android:background="@drawable/button_bg"
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>


</RelativeLayout>
